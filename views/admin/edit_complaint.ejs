<%- include header.ejs %>
<script src="https://cdn.ckeditor.com/4.5.1/standard/ckeditor.js"></script>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-8 col-md-7">
        <div class="card">
          <div class="header">
            <h4 class="title">Edit Complaint</h4>
          </div>
          <div class="content">
            <form action="/admin/edit_complaint" method="POST">
              <input type="hidden" name="id" value="<%- locals.complaints[0].id %>">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Complaint</label>
                    <input
                      type="text"
                      name="complaint" 
                      value="<%- locals.complaints[0].complaint %>"
                      class="form-control border-input"
                    />
                  </div>
                </div>                
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-info btn-fill btn-wd">
                  Update
                </button>
              </div>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
